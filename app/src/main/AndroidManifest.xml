<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phmb2.checkpermission">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_checkpermission"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_checkpermission"
        android:supportsRtl="true"
        android:theme="@style/AppThemePrivacy">

        <activity android:name=".activities.PoliticasPrivacidadeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppThemePermissions"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".activities.GraficoPermissoesActivity" />

    </application>

</manifest>